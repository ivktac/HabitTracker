@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <AuthorizeView>
                @greetingMessage @context.User.Identity?.Name!
                @Body
            </AuthorizeView>
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private string greetingMessage = "Вітаю, ";

    protected override Task OnInitializedAsync()
    {
        var currentDateTime = DateTime.Now;

        if (currentDateTime.Hour >= 6 && currentDateTime.Hour < 12)
        {
            greetingMessage = "Доброго ранку, ";
        }
        else if (currentDateTime.Hour >= 12 && currentDateTime.Hour < 17)
        {
            greetingMessage = "Доброго дня, ";
        }
        else if (currentDateTime.Hour >= 17 && currentDateTime.Hour < 21)
        {
            greetingMessage = "Доброго вечора, ";
        }
        else
        {
            greetingMessage = "Доброї ночі, ";
        }

        return base.OnInitializedAsync();
    }
}