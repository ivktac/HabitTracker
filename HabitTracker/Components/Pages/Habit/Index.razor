@page "/Habits"

@inject IHabit HabitService

<div class="d-flex flex-column align-items-center justify-content-center">
    <h3 class="mx-5 px-5">Мої звички</h3>
    @if (Habits.Count == 0)
    {
        <em class="h5 mt-5">У вас ще немає жодної звички</em>
    }
    else
    {
        <div class="container mt-4 w-50 d-flex justify-content-center">
            <ul class="list-group w-100">
                @foreach (var habit in Habits)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center mt-1">
                        <div class="m-2">
                            <div class="fw-bold h5 text-break">
                                <span style="color: @habit.HexCode">&#11044;</span>
                                @habit.Title</div>
                            <em>
                                @foreach (var frequency in habit.Frequencies)
                                {
                                    <span class="m-3">
                                        @ukrainian.DateTimeFormat.GetShortestDayName(frequency.DayOfWeek)
                                    </span>
                                }
                            </em>
                        </div>
                        <div style="min-width: 75px">
                            <a href="" class="btn btn-outline-primary btn-sm me-3">Edit</a>
                            <a href="" class="text-danger text-decoration-none h4"></a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    }
    <a href="/Habits/Add" class="btn btn-outline-primary m-5 btn-lg">Додати нову звичку</a>
</div>

@code {
    private List<Habit> Habits { get; set; } = [];
    
    private CultureInfo ukrainian = CultureInfo.GetCultureInfo("uk-UA");


    protected async override Task OnInitializedAsync() => Habits = await HabitService.GetHabitsAsync();
}