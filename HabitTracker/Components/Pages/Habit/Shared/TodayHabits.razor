
<div class="d-flex flex-column m-2 p-2">
    <h3 class="text-center">Навички сьогодні</h3>
    @foreach (var habit in Habits)
    {
        <div class="card m-2">
            <div class="card-body">
                <div class="card-title fw-bold">
                    <span style="color: @habit.HexCode;">&#11044;</span>
                    @habit.Title
                </div>
                <p class="card-text">@habit.Description</p>
                <a href="#" class="btn btn-primary w-100">Завершити</a>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public List<Habit> Habits { get; set; } = [];
}
